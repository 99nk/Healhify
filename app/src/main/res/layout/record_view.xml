<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_margin="5dp"
    android:elevation="10dp"
    android:layout_height="wrap_content">
    <LinearLayout
        android:background="#93d3da"
        android:padding="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/record_name"
            android:textSize="18dp"
            android:text="Name"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <LinearLayout

            android:layout_width="match_parent"
            android:weightSum="2"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <TextView
            android:textColor="@color/black"
            android:layout_marginTop="8dp"
            android:id="@+id/record_date"
            android:textSize="18dp"
            android:text="Date"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            />
        <TextView
            android:textColor="@color/black"
            android:layout_marginTop="8dp"
            android:id="@+id/record_age"
            android:textSize="18dp"
            android:text="Age"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            />
        </LinearLayout>
        <TextView
            android:textColor="@color/white"
            android:layout_marginTop="8dp"
            android:id="@+id/record_symptoms"
            android:textSize="18dp"
            android:text="Symptoms: Headache, Nausea"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <TextView
            android:textColor="@color/white"
            android:layout_marginTop="8dp"
            android:id="@+id/record_problem"
            android:textSize="18dp"
            android:text="Diagnosis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <TextView
            android:textColor="@color/white"
            android:layout_marginTop="8dp"
            android:id="@+id/record_tests"
            android:textSize="18dp"
            android:text="Tests: Not required"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <TextView
            android:textColor="@color/white"
            android:layout_marginTop="8dp"
            android:id="@+id/record_medicines"
            android:textSize="18dp"
            android:text="Medicines"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
    </LinearLayout>
</androidx.cardview.widget.CardView>